<section>
	<div class="section-header">
		<ol class="breadcrumb">
			<li><a href="#">home</a><!--</li>
			<li class="active">Blank page</li>-->
		</ol>
	</div><!--end .section-header -->
	<div class="section-body">
		<div class="card">
			<div class="card-body no-padding">
				<ul class="list divider-full-bleed">
					<% @documents.each do |doc| %>
					<li class="tile">
						<a class="tile-content ink-reaction" href="#offcanvas-document-<%= doc.id %>" data-toggle="offcanvas">
							<div class="tile-icon">
								<i class="fa fa-file-pdf-o"></i>
							</div>
							<div class="tile-text">
								<%= doc.name %>
							</div>
							<% doc.participants.each do |p| %>
							<div class="tile-icon">
								<%= image_tag p.user.avatar.url(:thumb), class: 'border-white border-xl' %> 
							</div>
							<% end %>
							<div class="tile-icon">
								<i class="fa fa-pencil"></i>
								<sup class="badge style-danger" style="margin-left:-12px;">1</sup>
							</div>
						</a>
					</li>
					<% end %>
				</ul>
			</div><!--end .card-body -->
		</div>
		<% content_for :offcanvas_right do %>
			<% @documents.each do |doc| %>
				<!-- BEGIN OFFCANVAS DEMO RIGHT -->
				<div id="offcanvas-document-<%= doc.id %>" class="offcanvas-pane width-12" style="width:900px">
					<div class="offcanvas-head">
						<header><%= doc.name %></header>
						<div class="offcanvas-tools">
							<a class="btn btn-icon-toggle btn-default-light pull-right" data-dismiss="offcanvas">
								<i class="fa fa-close"></i>
							</a>
						</div>
					</div>
					<div class="offcanvas-body">
						<div class="card">
							<div class="card-body no-padding">
								<div class="list divider-full-bleed">
									<div class="tile">
										<a class="btn btn-primary ink-reaction">
											<i class="fa fa-pencil"></i> Firmar
										</a>
										<a class="btn btn-flat ink-reaction">
											<i class="fa fa-user-plus"></i> Agregar Participante
										</a>
										<a class="btn btn-flat btn-danger ink-reaction">
											<i class="fa fa-trash"></i> Eliminar
										</a>
										<div class="tile-content"></div>
									</div>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-sm-8">
								<iframe src="<%= doc.file.url %>" style="width: 580px; height: 500px;"></iframe>
							</div>
							<div class="col-sm-4">
								<div class="card">
									<div class="card-head"><header>Participantes</header></div>
									<div class="card-body no-padding">
										<ul class="list divider-full-bleed">
											<% doc.participants.each do |p| %>
												<li class="tile">
													<a class="tile-content ink-reaction">
														<div class="tile-icon">
															<%= image_tag p.user.avatar.url(:thumb) %>
														</div>
														<div class="tile-text">
															<%= p.user.full_name %> <%= '(tu)' if p.user == current_user %>
														</div>
													</a>
												</li>
											<% end %>
										</ul>
									</div>
								</div>
							</div>
						</div>
					</div>
					<!--<div class="force-padding stick-bottom-right">
						<a class="btn btn-floating-action btn-accent " href="#offcanvas-demo-size3" data-toggle="offcanvas">
							<i class="md md-arrow-back"></i>
						</a>
					</div>-->
				</div>
				<!-- END OFFCANVAS DEMO RIGHT -->
			<% end %>
		<% end %>
	</div><!--end .section-body -->
</section>