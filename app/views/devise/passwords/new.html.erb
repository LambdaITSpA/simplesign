<span class="text-lg text-bold text-primary">¿Olvidaste tu contraseña?</span><br/><br/>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form floating-label' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control', autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.submit "Enviar instrucciones para recuperar mi contraseña", class: 'btn btn-primary btn-raised' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
